<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dp Units"
            android:id="@+id/button"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dpButtonClicked" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linear Layout"
            android:id="@+id/button10"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dpButtonClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Absolute Layout"
            android:id="@+id/button11"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dpButtonClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frame Layout"
            android:id="@+id/button12"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dpButtonClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relative Layout"
            android:id="@+id/button13"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dpButtonClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table Layout"
            android:id="@+id/button14"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dpButtonClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grid Layout"
            android:id="@+id/buttonpatata"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dpButtonClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code UI"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="codeButtonClicked"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Views"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="basicViewsButtonClicked"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="dateTimeButtonClicked"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MenÃºs"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="menuButtonClicked"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listas"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:onClick="listsButtonClicked"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>

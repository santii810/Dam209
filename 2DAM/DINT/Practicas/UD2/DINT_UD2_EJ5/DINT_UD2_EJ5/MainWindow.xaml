<Window x:Class="_2._5_DataBinding_Ejemplo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._5_DataBinding_Ejemplo1"
        mc:Ignorable="d"
        Title="Enlace de datos" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Enlace de datos:" HorizontalAlignment="Left" Margin="107,79,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="197,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Pepe"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="197,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                 Text="{Binding ElementName=textBox, Path=Text}"></TextBox>

    </Grid>
</Window>

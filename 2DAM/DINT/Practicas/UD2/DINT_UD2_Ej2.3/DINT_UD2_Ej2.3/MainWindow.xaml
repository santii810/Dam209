<Window x:Class="_2._2_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._2_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel x:Name="dock1" HorizontalAlignment="Left" Height="309" LastChildFill="True" VerticalAlignment="Top" Width="510">
            <Button Height="40" DockPanel.Dock="Top" Background="Coral">Top</Button>
            <Button Height="40" DockPanel.Dock="Top" Background="Salmon">Top 1</Button>
            <Button Height="40" DockPanel.Dock="Bottom" Background="Coral">Bottom</Button>
            <Button Height="40" DockPanel.Dock="Bottom" Background="Salmon">Bottom 1</Button>
            <Button Width="40" DockPanel.Dock="Left" Background="Cyan">Left</Button>
            <Button Width="40" DockPanel.Dock="Left" Background="White">Left 1</Button>
            <Button Width="40" DockPanel.Dock="Right" Background="Cyan">Right</Button>
            <Button Width="40" DockPanel.Dock="Right" Background="White">Right 1</Button>
            <Button >Middle</Button>
        </DockPanel>


    </Grid>
</Window>

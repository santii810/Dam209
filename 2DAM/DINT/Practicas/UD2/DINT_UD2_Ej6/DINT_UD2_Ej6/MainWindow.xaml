<Window x:Class="_2._6_EnlaceAdatos1_Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._6_EnlaceAdatos1_Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="384" Width="525">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="{Binding ElementName=slider, Path=Value}" Margin="57,29,0,0" VerticalAlignment="Top" Width="{Binding ElementName=slider, Path=Value}" Source="imagenes/tomate.jpg"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="174,296,0,0" VerticalAlignment="Top" Minimum="100" Maximum="400" Value="300" TickPlacement="TopLeft" Width="183" Height="33" TickFrequency="2" ValueChanged="slider_ValueChanged"/>

    </Grid>
</Window>

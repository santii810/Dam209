<Window x:Class="_2._2_StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._2_StackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel x:Name="stackPanel1" HorizontalAlignment="Left" Height="263" VerticalAlignment="Top" Width="446" Margin="38,27,0,0" Orientation="Vertical">
            <Label x:Name="label" Content="Una pila de botones"/>
            <Button x:Name="button" Content="Boton 1"/>
            <Button x:Name="button1" Content="Boton 2"/>
            <Button x:Name="button2" Content="Boton 3"/>
            <Button x:Name="button3" Content="Boton 4"/>
            <CheckBox x:Name="check" Content="Usa Orientación Vertical" Height="263" VerticalAlignment="Bottom" Click="check_Checked"/>
        </StackPanel>

    </Grid>
</Window>

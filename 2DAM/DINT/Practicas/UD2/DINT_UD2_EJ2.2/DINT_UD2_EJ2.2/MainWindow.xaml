<Window x:Class="_2._2_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._2_Canvas"
        mc:Ignorable="d" Height="350" Width="525" Title="Canvas">
    <Grid>
        <Canvas Width="400" Margin="58,0,59,10">
            <Canvas Height="200" Width="200" Canvas.Top="0" Canvas.Left="0">
                <Rectangle Stroke="Black" StrokeThickness="10" Width="200" Height="200" Fill="Red"></Rectangle>
            </Canvas>
            <Canvas Height="200" Width="200" Canvas.Top="40" Canvas.Left="40">
                <Rectangle Stroke="Black" StrokeThickness="10" Width="200" Height="200" Fill="Blue"></Rectangle>
            </Canvas>
            <Canvas Height="200" Width="200" Canvas.Top="80" Canvas.Left="80">
                <Rectangle Stroke="Black" StrokeThickness="10" Width="200" Height="200" Fill="Green"></Rectangle>
            </Canvas>

        </Canvas>
    </Grid>
</Window>
